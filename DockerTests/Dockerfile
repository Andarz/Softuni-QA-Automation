# Используем официальный образ Node.js в качестве базы
FROM node:14-alpine

# Установка директории внутри контейнера
WORKDIR /usr/src/app

# Копируем зависимости
COPY package*.json ./

# Установка зависимостей
RUN npm install

# Копируем все файлы из текущего каталога в рабочую директорию внутри контейнера
COPY . .

# Запуск вашего скрипта
CMD [ "node", "app.js" ]
